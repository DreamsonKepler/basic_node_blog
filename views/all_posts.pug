doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title All People's Posts
        link(rel='stylesheet', href='/static/css/bootstrap.min.css')
        link(rel='stylesheet', href='/static/css/navbar.css')
        link(rel='stylesheet', href='/static/css/all_posts.css')
    body
        .menu-collapsed
            .bar
            nav
                ul
                    li
                        span
                            a(href='/profile') Home
                    li
                        span
                            a(href='/create_post') Create a Post
                    li
                        span
                            a(href='/own_posts') See Own Posts
                    li
                        span
                            a.active(href='#') See All Posts
                    li
                        span
                            a(href='/logout') Log Out   
        #contact-me.contact.center
            .container
                .title
                    h2.h2 All Posted Messages
                    .heading-line.center
                .row.form-wrapper.border
                        each message in allPosts
                            .col-md-8.col-md-offset-2
                                ul.form-group.has-feedback.name-group
                                    label.label Name: 
                                    li.list-group-item #{message.name}
                                    label.label Email:
                                    li.list-group-item #{message.email}
                                    lable.label Message posted:
                                    li.list-group-item #{message.message}
                                    lable.label Message posted:
                                    li.list-group-item#commentbox
                                form(class="commentForm")
                                    input(id="comment", name="comment", type="text")
                                    button comment here
                            

        script(src="/static/js/jquery-3.1.1.min.js")
        script(src="/static/js/navbar.js") 
        script(src="/static/js/all_posts.js")  

